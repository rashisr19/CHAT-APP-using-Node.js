<div class="container">
    <br>
    <br>
    <br>
    <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-file-alt"></i>  Change Password</h1>
        <%- include('./partials/messages') %>
        <form action="/users/changepassword" method="POST">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" autocomplete="off" name="email" id="email" placeholder="abc@example.com" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
              <label for="oldpassword">Old password</label>
              <input type="password" class="form-control" id="oldpassword" name="oldpassword" placeholder="Enter old password">
            </div>
            <div class="form-group">
                <label for="password1">New password</label>
                <input type="password" class="form-control" id="password1" name="password1" placeholder="Enter new password">
              </div>
              <div class="form-group">
                <label for="password2">Re-enter new password</label>
                <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm new password">
              </div>
            <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
    </div>
</div>