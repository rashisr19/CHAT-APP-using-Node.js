<div class="container">
    <br>
    <br>
    <br>
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include('./partials/messages') %>
        <form action="/users/register" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="fname">First Name</label>
                <input type="fname" id="fname" name="fname" class="form-control" placeholder="Regina" autocomplete="off" value="<%= typeof fname != 'undefined' ? fname : '' %>">
              </div>
              <div class="form-group col-md-6">
                <label for="lname">Last Name</label>
                <input type="lname" id="lname" name="lname" class="form-control" placeholder="Phalange" autocomplete="off" value="<%= typeof lname != 'undefined' ? lname : '' %>">
              </div>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="abc@example.com"
                  autocomplete="off"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password1"
                  name="password1"
                  class="form-control"
                  placeholder="Create a good one"
                  value="<%= typeof password1 != 'undefined' ? password1 : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password2">Confirm Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Say that again"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
          <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
</div>